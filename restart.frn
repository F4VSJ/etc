#!/bin/bash

# DTMF 98#

pkill -TERM svxlink

sleep 2

 # On regle les niveaux audio

amixer -c 0 cset numid=6 78%

sleep 1

amixer -c 0 cset numid=4 12%


screen -dmS "svxlink" svxlink --pidfile=/var/run/svxlink.pid --runasuser=root --config=/etc/spotnik/svxlink.frn 
echo "frn">/etc/spotnik/network

sleep 1
screen -x svxlink -X stuff "e10#"


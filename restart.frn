#!/bin/bash

# DTMF 98#

# Stop svxlink
pkill -TERM svxlink
sleep 2

# Save network
echo "frn" > /etc/spotnik/network

# Set audio levels
amixer -c 0 cset numid=6 78%
sleep 1
amixer -c 0 cset numid=4 12%
sleep 1

# Clear logs
rm -f /tmp/svxlink.log

# Launch svxlink
svxlink --daemon --log-file=/tmp/svxlink.log --pidfile=/var/run/svxlink.pid --runasuser=root --config=/etc/spotnik/svxlink.frn
sleep 1

# Enable propagation monitor module
screen -x svxlink -X stuff "10#"

#!/bin/bash

# DTMF 99#

# Stop svxlink
pkill -TERM svxlink
sleep 2

# Save network
echo "echo" > /etc/spotnik/network

# Set audio levels
amixer -c 0 cset numid=6 78%
sleep 1
amixer -c 0 cset numid=4 12%
sleep 1

# Launch svxlink in a screen session
# -c sets the screen config file
# -L enables logging
# -dmS runs in daemon mode
screen -c /etc/spotnik/screenrc -L -dmS "svxlink" svxlink --pidfile=/var/run/svxlink.pid --runasuser=root --config=/etc/spotnik/svxlink.echo
